---
import type { CollectionEntry } from 'astro:content';

interface Props {
  member: CollectionEntry<'team'>;
}

const { member } = Astro.props;
---

<div class="flex flex-col md:flex-row gap-8 items-start">
  <div class="flex-shrink-0">
    <img 
      src={member.data.avatar.src.src} 
      alt={member.data.avatar.alt}
      class="w-48 h-48 rounded-lg object-cover"
    />
  </div>
  <div class="flex-1">
    <div class="mb-4">
      <h1 class="text-3xl font-bold text-gray-800 inline">{member.data.name}</h1>
      <span class="text-2xl text-gray-600 ml-4">{member.data.title}</span>
    </div>
    {member.data.description && (
      <p class="text-gray-600 text-lg leading-relaxed">{member.data.description}</p>
    )}
  </div>
</div>