---
import Link from "@components/ui/link.astro";
import LifecycleSvg from "@components/lifecycle-svg.astro";
import { Icon } from "astro-icon/components";
---

<main class="pt-16 pb-8 md:pt-12 md:pb-24">
  <!-- Header row -->
  <div class="text-center mb-12">
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Get to the new era of AI with ease.
    </h1>
  </div>

  <!-- Two column layout -->
  <div class="grid lg:grid-cols-10 gap-8">
    <!-- Description column (40%) -->
    <div class="lg:col-span-4">
      <div class="relative">
        <p class="text-lg text-slate-600">
          Our mission is to make it easy for <span class="text-gray-500 font-extrabold">you</span> to adopt the best practices in Machine Learning Operations.
        </p>
        
        <div class="mt-6">
          <Link
            size="lg"
            style="outline"
            rel="noopener"
            href="https://github.com/mlops-ninja"
            class="flex gap-1 items-center justify-center"
            target="_blank">
            <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
             GitHub Organization
          </Link>
        </div>
      </div>
    </div>
    
    <!-- Gradient separator -->
    <div class="lg:col-span-1 flex justify-center">
      <div class="w-1 bg-gradient-to-b from-sky-300 to-fuchsia-300 rounded-full"></div>
    </div>
    
    <!-- Lifecycle SVG column (60%) -->
    <div class="lg:col-span-5 w-full">
      <LifecycleSvg />
    </div>
  </div>
</main>
